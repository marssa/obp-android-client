<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select OBP Instance:"
            android:textSize="23dip" android:textAlignment="center" android:layout_gravity="center"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="remote TrimSlice-1"
            android:id="@+id/remoteTrimSlice1" android:textSize="20dip" android:onClick="selectRemoteTrimSlice1"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="remote TrimSlice-2"
            android:id="@+id/remoteTrimSlice2" android:textSize="20dip" android:onClick="selectRemoteTrimSlice2"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="remote Laptop"
            android:id="@+id/remoteLaptop" android:textSize="20dip" android:onClick="selectRemoteLaptop"/>
</LinearLayout>

