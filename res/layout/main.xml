<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select OBP Instance:"
            android:textSize="23dip" android:textAlignment="center" android:layout_gravity="center"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="utilite_1@marsec-xl"
            android:id="@+id/utilite1" android:textSize="20dip" android:onClick="selectUtilite1"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="trimslice_1@marsec-xl"
            android:id="@+id/trimSlice1" android:textSize="20dip" android:onClick="selectTrimSlice1"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="trimslice_2@marsec-xl"
            android:id="@+id/trimSlice2" android:textSize="20dip" android:onClick="selectTrimSlice2"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="trimslice_3@marsec-xl"
            android:id="@+id/trimSlice3" android:textSize="20dip" android:onClick="selectTrimSlice3"/>
</LinearLayout>

